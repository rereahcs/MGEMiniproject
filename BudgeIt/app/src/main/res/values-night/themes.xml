<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BudgeIt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/verdana_fontfamily</item>

        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_night</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/background_night</item>
        <item name="colorOnBackground">@color/font_night</item>
        <item name="colorSurface">@color/primary_night</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorControlActivated">@color/font_night</item>
        <item name="colorControlNormal">@color/primary_night</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/primary_night</item>
        <item name="android:textColor">@color/font_night</item>

        <item name="colorSecondary">@color/primary_night</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:popupBackground">@color/offBackground_night</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>
</resources>